# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://participa_user:participa_dev_2024@localhost:5432/participa_df?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USER=participa_user
DB_PASSWORD=participa_dev_2024
DB_NAME=participa_df

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# ============================================
# SECURITY
# ============================================
JWT_SECRET=participa-df-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=10

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# FILE STORAGE (MinIO/S3)
# ============================================
STORAGE_TYPE=local
# Para usar MinIO, altere para: minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=participa_minio
MINIO_SECRET_KEY=participa_minio_2024
MINIO_BUCKET_NAME=manifestacoes

# Armazenamento local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=26214400
# 25MB em bytes

# ============================================
# RATE LIMITING
# ============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ============================================
# EXTERNAL SERVICES
# ============================================
# IZA (Sistema de Classificação IA)
IZA_API_URL=http://localhost:5000/api/classificar
IZA_API_KEY=iza-development-key

# Serviço de Transcrição
TRANSCRIPTION_SERVICE_URL=http://localhost:8000/transcribe
TRANSCRIPTION_API_KEY=transcription-dev-key

# ============================================
# EMAIL (Opcional - para notificações)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=ouvidoria@participa.df.gov.br
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM="Ouvidoria Digital DF <ouvidoria@participa.df.gov.br>"

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AUDIO_TRANSCRIPTION=true
ENABLE_AUTO_CLASSIFICATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# ============================================
# BUSINESS RULES
# ============================================
PROTOCOLO_PREFIX=OUV
PROTOCOLO_YEAR_FORMAT=YYYY
# Tempo de resposta padrão (em dias)
SLA_RESPOSTA_DIAS=30
